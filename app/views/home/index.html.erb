<div class="container mt-4">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @stages.each do |stage| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <span class="material-icons text-primary me-3" style="font-size: 2rem;"><%= stage[:icon] %></span>
              <h5 class="card-title mb-0"><%= stage[:name] %></h5>
            </div>
            <p class="card-text"><%= stage[:description] %></p>
            <%= link_to "Go to #{stage[:name]}", stage[:path], class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 